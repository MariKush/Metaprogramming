{
  "tabs_and_indents": {
    "use_tab_character": false,
    "indent": 4,
    "keep_indents_on_empty_lines": true,
    "do_not_indent_top_level_class_members": false
  },
  "spaces": {
    "before_parentheses":{
      "if": true,
      "for": true,
      "while": true,
      "switch": true,
      "try": true,
      "catch": true,
      "synchronized": true,
      "method_declaration": true,
      "method_call": true
    },
    "around_operators":{
      "assignment": true,
      "logical": true,
      "equality": true,
      "relational": true,
      "bitwise": true,
      "additive": true,
      "multiplicative": true,
      "shift": true,
      "unary": false,
      "lambda": true,
      "method_reference": true
    },
    "before_left_brace": {
      "class": true,
      "method": true,
      "if": true,
      "else": true,
      "for": true,
      "while": true,
      "do": true,
      "switch": true,
      "case": true,
      "try": true,
      "catch": true,
      "finally": true,
      "synchronized": true,
      "array_initializer": true
    },
    "before_keyword": {
      "else": true,
      "while": true,
      "catch": true,
      "finally": true
    },
    "within": {
      "if": true,
      "for": true,
      "while": true,
      "switch": true,
      "try": true,
      "catch": true,
      "synchronized": true,
      "brackets": true,
      "array_initializer_braces": true,
      "empty_array_initializer_braces": true,
      "method_declaration_parentheses": true,
      "empty_method_declaration_parentheses": true,
      "method_call_parentheses": true,
      "empty_method_call_parentheses": true,
      "type_cast_parentheses": true,
      "annotation_parentheses": true,
      "angle_brackets": true
    },
    "in_ternary_operator": {
      "before_question_mark": true,
      "after_question_mark": true,
      "before_colon": true,
      "after_colon": true
    },
    "other": {
      "after_comma": true,
      "before_comma": false,
      "after_for_semicolon": true,
      "before_for_semicolon": false,
      "after_colon_in_foreach": true,
      "before_colon_in_foreach": true,
      "after_type_cast": true
    }
  },
  "blank_lines": {
    "maximum": {
      "in_declarations": 2,
      "between_header_and_package": 2
    },
    "minimum": {
      "before_package_statement": 0,
      "after_package_statement": 2,
      "before_imports": 1,
      "after_imports": 1,
      "around_class": 3,
      "after_class_header": 3
    }
  }
}