{
  "tabs_and_indents": {
    "tab_size": 4,
    "indent": 4,
    "configuration_indent": 8,
    "keep_indents_on_empty_lines": false,
    "label_indent": 0,
    "absolute_label_indent": false
  },
  "spaces": {
    "before_parentheses":{
      "if": true,
      "for": true,
      "while": true,
      "switch": true,
      "try": true,
      "catch": true,
      "synchronized": true
    },
    "around_operators":{
      "assignment": true,
      "logical": true,
      "equality": true,
      "relational": true,
      "bitwise": true,
      "additive": true,
      "multiplicative": true,
      "shift": true,
      "unary": false,
      "lambda": true,
      "method_reference": false

    },
    "before_left_brace": {
      "class": true,
      "method": true,
      "if": true,
      "else": true,
      "for": true,
      "while": true,
      "do": true,
      "switch": true,
      "try": true,
      "catch": true,
      "finally": true,
      "synchronized": true
    },
    "before_keyword": {
      "else": true,
      "while": true,
      "catch": true,
      "finally": true
    },
    "in_ternary_operator": {
      "before_question_mark": true,
      "after_question_mark": true,
      "before_colon": true,
      "after_colon": true
    },
    "other": {
      "after_comma": true,
      "before_comma": false,
      "after_for_semicolon": true,
      "before_for_semicolon": false,
      "after_colon_in_foreach": true,
      "before_colon_in_foreach": true,
      "after_type_cast": true
    }
  }
}